{
  "name": "PubHubsClient",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "story:dev": "histoire dev --port=6006",
    "story:build": "histoire build",
    "story:preview": "histoire preview",
    "serve": "vue-cli-service serve --port=8081",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "pwa": "vue-cli-service build && npx http-server dist",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@vue/test-utils": "^2.2.3",
    "autoprefixer": "^10",
    "core-js": "^3.8.3",
    "loglevel": "^1.8.0",
    "matrix-js-sdk": "^24",
    "emojibase": "^6",
    "pinia": "^2.0.26",
    "postcss": "^8",
    "register-service-worker": "^1.7.2",
    "tailwind-merge": "^1.8.1",
    "tailwindcss": "^3",
    "typescript-cookie": "^1.0.4",
    "util": "^0.12.5",
    "vue": "^3.2.13",
    "vue-i18n": "^9.2.2",
    "vue-router": "^4.1.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.16",
    "@babel/eslint-parser": "^7.12.16",
    "@histoire/plugin-vue": "^0.15.8",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vitejs/plugin-vue": "^4",
    "@vue/cli-plugin-babel": "~5.0.0",
    "@vue/cli-plugin-eslint": "~5.0.0",
    "@vue/cli-plugin-pwa": "~5.0.0",
    "@vue/cli-plugin-typescript": "~5.0.0",
    "@vue/cli-service": "~5.0.0",
    "@vue/eslint-config-typescript": "^11",
    "eslint": "^8",
    "eslint-plugin-vue": "^9",
    "histoire": "^0.15.9",
    "jsdom": "^20.0.2",
    "typescript": "^5.0.2",
    "vitest": "^0.26",
    "vue-cli-plugin-tailwind": "~3.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "vue/setup-compiler-macros": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended",
      "@vue/typescript"
    ],
    "parserOptions": {
      "parser": "@typescript-eslint/parser"
    },
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "vars": "all",
          "args": "after-used",
          "varsIgnorePattern": "^props|value",
          "ignoreRestSiblings": false
        }
      ],
      "vue/multi-word-component-names": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "_id": "@",
  "readme": "ERROR: No README data found!"
}
